/* pages/password/index.wxss */
.wjmm{
  padding: 80rpx;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 0;
}
.user{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #EAEAEA;
  display: flex;
  flex-direction: row;
}
.user-l{
  width: 40rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.user-l image{
  width: 25rpx;
  height: 35rpx;
}
.user-r{
  width: 550rpx;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.user-r input{
  width: 550rpx;
  height: 100%;

}
.user-l2{
  width: 40rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.user-l2 image{
  width: 30rpx;
  height: 25rpx;
}
.user-r2{
  width: 550rpx;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  justify-content: space-between;
}
.user-r2 input{
  width: 400rpx;
  height: 100%;
}
.user-r2 view{
  width: 140rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  font-weight: 600;
  color: #3D9CF8;
  border: 1rpx solid #3D9CF8;
  border-radius: 25rpx;
}
.dl{
  width: 100%;
  padding: 80rpx;
  padding-bottom: 50rpx;
  box-sizing: border-box;
}
.submit{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 26rpx;
  background-color: #3C9DFB;
  border-radius: 45rpx;
  font-weight: 600;
  letter-spacing:10rpx;
}