  font-size: 32rpx;
  color: #222222;

}
.scpic{
  padding-top: 60rpx;
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.scpic image{
  width: 170rpx;
  height: 170rpx;
  /* border: 1rpx dashed #E0E0E0; */
  margin-bottom: 20rpx;
}
.scpic::after{
  content: '';
  width: 175rpx;
}
.dizhi{
  width: 100%;
  display: flex;
  align-items: center;
  color: #AAAAAA;
  font-size: 26rpx;
  padding: 25rpx 0;
}
.dizhi image{
  width: 28rpx;
  height: 28rpx;
