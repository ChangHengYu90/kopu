/* pages/kopuhaofb/index.wxss */
.kopu{
  width: 100%;
  border-top: 1rpx solid #999;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.kopucon{
  width: 100%;
  height: 110rpx;
  border-bottom: 1rpx solid #E0E0E0;
  display: flex;
  align-items: center;
  flex-direction: row;
}
.kopucon-l{
  padding-right: 26rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #BBBBBB;
}
.kopucon-r{
  width: 100%;
  font-size: 32rpx;
  color: #BBBBBB;
  height: 100%;
  display: flex;
  align-items: center;
}
.kopucon-r input{
  width:100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #222222;
  display: flex;
  align-items: center;
}
.kopucon-rinput{
  width: 100%;
  height: 80%;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #BBBBBB;
}
.kopucon2{
  width: 100%;
  padding: 35rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
  display: flex;
  flex-direction: row;
}
.kopucon2-l{
  padding-right: 26rpx;
  font-size: 32rpx;
  color: #BBBBBB;
}
.kopucon2-r{
  width: 100%;
  font-size: 32rpx;
  color: #BBBBBB;
  height: 100%;
 
}
textarea{
