/* pages/register/index.wxss */
.top{
  width: 100%;
  height: 315rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  background-size: 100% 100%;
  border-bottom: 1rpx solid #ddd;
}
.top image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 1rpx solid #fff;
}
.dw{
  width: 100rpx;
  height: 60rpx;
  display: flex;
   justify-content: center;
  align-items: center;
  position: absolute;
  top: 0;
  right: 0;
}
.dw image{
  width: 50rpx;
  height: 40rpx;
 
}
.kb{
  width: 100%;
  height: 20rpx;
  background-color: #f4f8fb;
}
.user-out{
  width: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.username{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #ddd;
}
.username2{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  
}
.username-l{
  width: 85rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.username-l image{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
}
.username-r{
  width: 635rpx;
  height: 100%;
  display: flex;
  flex-direction: row
}
.username-r-l{
  width: 190rpx;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #1B1B1B;
}
.username-r-r{
  width: 425rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.username-r-r input{
  width: 425rpx;
  height: 90%;
  font-size: 24rpx;
  color: #A2A2A2;
}
.submit-out{
  width: 100%;
  margin-top: 180rpx;
  display: flex;
  justify-content: center;
  height: 64rpx;
}
.submit{
  width: 375rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 64rpx;
  background-color: #3c9dfb;
  color: #fff;
  font-size: 30rpx;
  border-radius: 32rpx;
}